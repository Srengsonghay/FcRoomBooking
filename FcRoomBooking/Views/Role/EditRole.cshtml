@model FcRoomBooking.Models.ViewModel.RoleViewModel
@using Microsoft.AspNetCore.Identity;
@{
    Layout = "_LayoutAdmin";
}
<div class="col-lg-12 d-flex flex-column grid-margin stretch-card bg-white p-4 rounded shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-5">Edit Role</h4>
        <form class="forms-sample" method="post" asp-controller="Role" asp-action="EditRole">
            <div class="form-group row">
               
                <input type="hidden" class="form-control" id="exampleInputUsername1" asp-for="Id" >
                
                <div class="col-md-6">
                    <label for="exampleInputUsername1">Role Name</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Name" >
                </div>
                
            </div>
            
            <button type="submit" class="btn btn-primary mr-2">Save</button>
            
            @*<button type="submit" asp-controller="Role" asp-action="DeleteRole" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>*@
            <a type="submit" data-bs-toggle="modal" data-bs-target="#RoleModal" class="btn btn-danger">Delete</a>
            <a class="btn btn-light" asp-controller="Role" asp-action="index">Cancel</a>
        </form>
    </div>
</div>
<partial name="_DeletePartialView"></partial>
