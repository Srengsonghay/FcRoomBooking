@{
    ViewData["Title"] = "_ReasonPartialView";
}
<div class="modal fade" role="dialog" tabindex="-1" id="@("DetailTeam-"+Model.Id)" aria-labelledby="DetailTeamLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content" >
            <div class="modal-header">
                <h5 class="modal-title">Personal Issue Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="javascript:window.location.reload()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div style="height: 200px;">
                <dl class="row" style="margin: 5px 5px 5px;">
                    @*<h5>@Model.Reason</h5>*@
                    <textarea asp-for="Reason" style="width: 100%; height: 150px;" readonly></textarea>
                </dl>
            </div>           
        </div>
    </div>
</div>

