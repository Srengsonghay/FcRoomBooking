@model FcRoomBooking.Models.ViewModel.RoleViewModel

@{
}
<div class="modal fade" id="RoleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                        <h4>Do you want to delete this <span class="text-danger">@Model.Name</span>? </h4>
                  </div>
                  <div class="modal-footer">
                      <form method="post" asp-action="EditRole" asp-controller="Role">
                            <div class="input-group">
                                <input type="hidden"  asp-for="Id">
                                
                            </div>
                            <button type="submit" asp-controller="Role" asp-action="DeleteRole" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
                        </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>
                  </div>
                </div>
              </div>
            </div>

