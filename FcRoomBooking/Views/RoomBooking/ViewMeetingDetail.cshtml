@model FcRoomBooking.Models.Domain.RoomBooking
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutAdmin";
}


@*modal*@
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
          <h3 class="card-title">Do you want to delete this meeting?</h3>
      </div>
      <div class="modal-footer">
        <form class="forms-sample" asp-controller="RoomBooking" asp-action="DeleteMyMeeting" method="post" autocomplete="off" enctype="multipart/form-data">
            <input type="hidden" class="form-control" id="inputPassword2" asp-for="Id">
            <button type="submit"class="btn btn-danger" asp-controller="RoomBooking" asp-action="DeleteMyMeeting">Delete</button>
        </form>
        <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>


            <div class="col-md-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Meeting Subject</h4>
                  <p class="lead">
                      @Model.Subject
                  </p>
                  <br />
                  
                  <div class="row">
                    <div class="col-md-2 ">
                      
                      <h4>Room </h4>
                      <h4>Start</h4>
                      <h4>End  </h4>
                      
                    </div>
                    <div class="col-md-1">
                      
                      <h4>:</h4>
                      <h4>:</h4>
                      <h4>:</h4>
                      
                    </div>
                    <div class="col-md-5">
                      
                      <h4>@Model.Room.RoomName</h4>
                      <h4>@Model.BookingFrom.ToString("MMM-dd-yyyy/ HH:MM tt")</h4>
                      <h4>@Model.BookingTo.ToString("MMM-dd-yyyy/ HH:MM tt")</h4>
                     
                    </div>
                    <div class="col-md-4 ">
                    @{
                        
                         var base64 = Convert.ToBase64String(Model.Room.RoomImage);
                         var img = string.Format("data:image/gif;base64,{0}", base64);
                        
                        
                     }
                      
                      <img src="@img" style="width: 380px; height:200px;"/>
                     
                    </div>
                  </div>

                  
                </div>
                    <div class="card-body">
                    @if (Model.Detail != null)
                    {
                       <blockquote class="blockquote blockquote-primary">
                        <p>@Model.Detail</p>
                        
                      </blockquote>
                    }
           
                        <a class="btn btn-secondary float-right mr-4" asp-controller="RoomBooking" asp-action="ListMyMeeting">Close</a> 
                       <button type="button" class="btn btn-danger float-right" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</button>
                    </div>
                  </div>
                 
            </div>

            
