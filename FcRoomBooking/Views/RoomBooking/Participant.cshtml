@{
    Layout = "_LayoutAdmin";
}

<div class="col-lg-12 d-flex flex-column grid-margin stretch-card bg-white p-4 rounded relative">
    <div>
        <span style="font-size:20px; font-weight:bold">Booking</span>
        <button class="btn btn-outline-success float-right" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Invite</button>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        UserName
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int no = 1;
                }
                <tr>
                    <td>
                        @no
                    </td>
                    <td>
                        @no
                    </td>
                    <td>
                        @no
                    </td>
                    <td>
                        <a class="btn btn-outline-primary p-2" asp-controller="RoomBooking" asp-action="Edit">Edit</a>
                        <a class="btn btn-outline-info p-2" asp-controller="RoomBooking" asp-action="Participant">Remove</a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Invite Participant</h5>
                <button type="button" class="btn p-0" style="font-size:25px!important" data-bs-dismiss="modal">
              <span class="mdi mdi-close" ></span>
        </button>
      </div>
      <div class="modal-body">
        <form>
               <label for="exampleInputUsername1">Participant</label>
                    <select class="form-control selectList" name="participant[]" multiple asp-items="@ViewBag.Date" required>
                    <option value="noselectedvalue">---</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
               </select>
               <input class="form-control" type="text" id="showPart" disabled/>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" >
        $(document).ready(function () {
        $(".selectList").chosen({ width: "100%" });
        });
</script>
