@using FcRoomBooking.Constants
@using Microsoft.AspNetCore.Identity;
@inject IAuthorizationService AuthorizationService
@using Microsoft.AspNetCore.Authorization
@model FcRoomBooking.Areas.Identity.Data.ApplicationUser
@{
    Layout = "_LayoutAdmin";
}
 <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                        <form id="registerForm" enctype="multipart/form-data" method="post" asp-controller="User" asp-controller="Edit">
                            <input type="hidden" asp-for="Id" class="form-control" />
                                        <div class="col-lg-6">
                                        <h2>Edit User Account</h2>
                                        <hr />
                                        <div class="form-floating">
                                            <label asp-for="Email"></label>
                                            <input asp-for="Email" class="form-control" />
                                            
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" />
                                            
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        </div>
                                        <br />
                                        <button type="submit" class="btn btn-md btn-primary">Update</button>
                                        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.User.Delete)).Result.Succeeded)
                                        {
                                               <button type="submit" class="btn btn-md btn-danger" asp-action="Delete" asp-controller="User">Delete</button>
                                        }
                    
                                        <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Cancle</a>
                                        
                                

                       </form>
                <div class="cart-footer">
            </div>
 </div>
 @section Scripts {
    <partial name="_ValidationScriptsPartial" />      
}


