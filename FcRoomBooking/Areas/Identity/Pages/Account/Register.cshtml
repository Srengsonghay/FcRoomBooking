@page
@model RegisterModel
@{
    //ViewData["Title"] = "Register";
    Layout = "_LayoutAdmin";
}

@*<h1>@ViewData["Title"]</h1>*@
 <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body ">
                  <h4 class="card-title">@ViewData["Title"] <a class="btn btn-success float-right" asp-area="Identity" asp-page="/Account/Register"><strong>+</strong></a></h4>
                  <partial name="_StatusMessage" for="StatusMessage" />
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data" method="post">
                            <div class="row">
                            <div class="col-6">
                                        <h2>Create a new account.</h2>
                                        <hr />
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                            <label asp-for="Input.Email"></label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <label asp-for="Input.Password"></label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <label asp-for="Input.ConfirmPassword"></label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                         @*<div class="form-floating">
                                            <input asp-for="Input.Image" type="file" class="form-control file-upload-info"   />
                                            <label asp-for="Input.Image"></label>
                                            <span asp-validation-for="Input.Image" class="text-danger"></span>
                                        </div>*@
                                         <div class="form-floating mb-5">
                                           <Select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control" id="exampleFormControlSelect2">
                                               <option disabled selected> -- Select Role--</option>
                                           </Select>
                
                                        </div>
                                        <button id="registerSubmit" type="submit" class="w-100 btn btn-md btn-primary mb-2">Create</button>
                                        <a class="w-100 btn btn-md btn-secondary" asp-action="Index" asp-controller="User">Back</a>
        
                                
                            </div>
                            <div class="col-6">
                                       <h2>User Profile</h2>
                                        <hr />
                                       
                                          <input type="file"
                                                accept=".png,.jpg,.jpeg,.gif,.tif"
                                                asp-for="Input.ProfileImage"
                                                class="form-control"
                                                style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                                onchange="document.getElementById('Picture').src = window.URL.createObjectURL(this.files[0])" />
                                        <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
                                        <div class="d-flex align-items-center mb-4">
                                          <div class="flex-shrink-0">
                                                @if (Model.Input.ProfileImage != null)
                                            {
                                                <img id="Picture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfileImage))" alt="Image" class="img-fluid rounded-circle border border-dark border-3" style="width: 70px;">
                                            }
                                            else
                                            {
                                                <img id="Picture" style="width:350px;height:350px; object-fit:cover" src="https://cdn-icons-png.flaticon.com/512/456/456212.png" alt="Image" class="img-fluid rounded-circle border border-dark border-3" style="width: 70px;">
                                               
                                            }
                 
                                          </div>

                                </div>
                            </div>
                       </form>
                <div class="cart-footer">
            </div>
           </div>
 </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="data/javascript">
        
    </script>
}
@section Style{
    <link rel="stylesheet" href="~/FcRoomBooking.styles.css" />
}
